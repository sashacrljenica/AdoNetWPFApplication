    <Grid>
        <GroupBox x:Name="groupBox" Margin="140,90" Padding="10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/group.png" Margin="5,0" Height="20"/>
                    <TextBlock FontWeight="Bold">Sign In</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <TextBlock x:Name="lblName" Text="User name:" Margin="25,0" Padding="5" FontWeight="Bold" />
                <TextBox x:Name="txtName" Width="150" HorizontalAlignment="Center"/>
                <TextBlock x:Name="lblPassword" Text="Password:" Margin="25,0" Padding="5" FontWeight="Bold"/>
                <PasswordBox x:Name="passwordBox" Width="150" HorizontalAlignment="Center"/>
                <Button x:Name="btnLogin" Content="Login" Margin="25,15" HorizontalAlignment="Right" Click="btnLogin_Click" IsDefault="True"/>
            </StackPanel>
        </GroupBox>
